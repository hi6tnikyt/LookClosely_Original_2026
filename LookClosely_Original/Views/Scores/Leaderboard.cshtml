@using LookClosely_Original.LookCloselyViewModels 
@model IEnumerable<ScoreViewModel>

@{
    ViewData["Title"] = "Класация";
 }

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">🏆 ТОП ДЕТЕКТИВИ</h1>
        <p class="text-muted">Най-бързите и наблюдателни играчи</p>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">№</th>
                        <th>Играч</th>
                        <th>Ниво</th>
                        <th>Точки</th>
                        <th class="pe-4">Дата</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rank = 1;
                    }
                    @foreach (var score in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">
                                @(rank == 1 ? "🥇" : rank == 2 ? "🥈" : rank == 3 ? "🥉" : rank + ".")
                            </td>
                            <td>@score.UserName</td>
                            <td>@score.LevelName</td>
                            <td class="fw-bold text-primary">@score.Points</td>
                            <td class="pe-4 text-muted">@score.DateTime.ToString("dd.MM.yyyy")</td>
                        </tr>
                        rank++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>