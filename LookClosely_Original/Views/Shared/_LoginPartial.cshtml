@using Microsoft.AspNetCore.Identity
@using LookClosely_Original.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);

        <li class="nav-item">
            <a class="nav-link text-dark d-flex align-items-center" asp-controller="Profile" asp-action="Index">
                @if (user != null && !string.IsNullOrEmpty(user.AvatarPath))
                {
                    <img src="@user.AvatarPath" class="rounded-circle me-2" style="width:30px; height:30px; object-fit:cover; border: 1px solid #ccc;">
                }
                <span>Здравей, @(user?.UserName ?? User.Identity?.Name)!</span>
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark border-0">Изход</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
    }
</ul>