@model IEnumerable<LookClosely_Original.ViewModels.LevelViewModel>

@{
    ViewData["Title"] = "Избор на ниво";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">🔍 Избери своята мисия</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">+ Ново Ниво</a>
    </div>

    <div class="row">
        @foreach (var level in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@level.ImagePath" class="card-img-top" alt="@level.Name" style="height: 200px; object-fit: cover;">

                    <div class="card-body text-center">
                        <h5 class="card-title">@level.Name</h5>
                        <p class="badge bg-info text-dark">@level.Difficulty</p>
                        <br />

                        <a asp-action="Details" asp-route-id="@level.Id" class="btn btn-success mt-2 w-100 shadow-sm">Играй сега</a>

                        <div class="mt-3 pt-3 border-top">
                            <small class="text-muted d-block mb-2">Администрация:</small>
                            <div class="btn-group btn-group-sm w-100">
                                <a asp-action="Edit" asp-route-id="@level.Id" class="btn btn-outline-warning">Редактирай</a>
                                <a asp-action="Delete" asp-route-id="@level.Id" class="btn btn-outline-danger">Изтрий</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>