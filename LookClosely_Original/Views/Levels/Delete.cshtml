@model LookClosely_Original.ViewModels.LevelViewModel

@{
    ViewData["Title"] = "Изтриване на ниво";
}

<div class="container mt-5">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h3>⚠️ Потвърждение за изтриване</h3>
        </div>
        <div class="card-body text-center">
            <p class="lead">Сигурни ли сте, че искате да изтриете нивото?</p>
            <h4 class="text-primary">"@Model.Name"</h4>
            <hr />
            <div class="mb-4">
                <img src="@Model.ImagePath" alt="@Model.Name" style="max-width: 300px; border-radius: 10px;" />
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger btn-lg px-5">Да, Изтрий го!</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-5">Отказ</a>
            </form>
        </div>
    </div>
</div>