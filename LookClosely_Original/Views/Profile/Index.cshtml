@model LookClosely.Models.ApplicationUser

@{
    ViewData["Title"] = "Моят Профил";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 text-center">
            <div class="card shadow">
                <div class="card-body">
                    <img src="@(string.IsNullOrEmpty(Model.AvatarPath) ? "/images/default-avatar.png" : Model.AvatarPath)" 
                         class="rounded-circle img-thumbnail mb-3" style="width: 150px; height: 150px; object-fit: cover;">

                    <h3>@Model.UserName</h3>
                    <p class="text-muted">@Model.Email</p>
                    <hr>
                    <h5>Биография</h5>
                    <p>@(Model.Bio ?? "Все още няма биография...")</p>

                    <a asp-action="Edit" class="btn btn-primary btn-sm">Редактирай Профила</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Моите Резултати</h4>
                </div>
                <div class="card-body">
                    @if (Model.Scores.Any())
                    {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Ниво</th>
                                        <th>Точки</th>
                                        <th>Дата</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var score in Model.Scores.OrderByDescending(s => s.DateTime))
                                {
                                            <tr>
                                                <td>@score.Level.Name</td>
                                                <td class="fw-bold text-success">@score.Points</td>
                                                <td>@score.DateTime.ToString("dd.MM.yyyy")</td>
                                            </tr>
                                }
                                </tbody>
                            </table>
                    }
                    else
                    {
                            <p class="text-center">Все още нямаш записани игри. <a asp-controller="Levels" asp-action="Index">Започни сега!</a></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
